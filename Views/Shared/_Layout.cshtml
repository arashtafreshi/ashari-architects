<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ashari-Architects.com</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/lib/materialize/dist/css/materialize.min.css">
        <script src="~/lib/vue/dist/vue.min.js"></script>
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/materialize/dist/css/materialize.min.css">
        <script src="~/lib/vue/dist/vue.min.js"></script>
    </environment>
</head>
<body>
    

    <nav>
        <div class="nav-wrapper">
        <a href="#" class="brand-logo">Ashari-Architects.com</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
        </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col s12 m6 l6">
                    <p>&copy; 2017 - Ashari-Architects.com</p>
                </div>
                <div class="col s12 m6 l6">
                    <p class="right-align">Powered by Jeeveh</p>
                </div>
            </div>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/lib/materialize/dist/js/materialize.min.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/lib/materialize/dist/js/materialize.min.js"></script>
    </environment>


    @RenderSection("Scripts", required: false)

    <script language="JavaScript" type="text/javascript">
        $(document).ready(function(){
            $('.slider').slider();
            $('.parallax').parallax();
        });
    </script>

</body>
</html>
