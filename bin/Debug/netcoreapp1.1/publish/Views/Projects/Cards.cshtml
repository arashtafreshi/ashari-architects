@model List<ashari_architects.com.Models.Card>

@{
    ViewData["Title"] = "Sample Card";
}
<h2>@ViewData["Title"]</h2>


<div class="container">
    <div class="row">
        @foreach(var card in Model){
        <div class="col s12 m6">
          <div class="card hoverable">
            <div class="card-image">
              <img class="materialboxed" width="650" src="@card.src">
              <span class="card-title">@card.title</span>
            </div>
            <div class="card-content">
              <p>@card.text</p>
            </div>
            
          </div>
        </div>
        }
      </div>
</div>